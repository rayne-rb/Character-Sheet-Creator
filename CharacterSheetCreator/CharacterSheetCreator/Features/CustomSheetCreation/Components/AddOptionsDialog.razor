<MudDialog>
    <TitleContent>@Title</TitleContent>
    <DialogContent>
        <MudCheckBox Value="" Label="Add Row"></MudCheckBox>
        <MudCheckBox Value="" Label="Add Field"></MudCheckBox>
        <MudCheckBox Value="" Label="Add "></MudCheckBox>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="@Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="@Confirm">Confirm</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] public required IMudDialogInstance MudDialog { get; set; }

    [Parameter] public string Title { get; set; } = string.Empty;

    void Cancel()
    {
        MudDialog.Cancel();
    }

    void Confirm()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }

}