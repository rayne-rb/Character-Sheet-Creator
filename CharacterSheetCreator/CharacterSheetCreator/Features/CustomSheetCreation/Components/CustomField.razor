@using CharacterSheetCreator.Shared.Enums

@if (FieldType == CustomFieldType.StringField)
{
    @if (HasLabel == null)
    {
        <MudTextField T="string?"></MudTextField>
    }
    else if ((bool)HasLabel)
    {
        <MudStack>
            <MudText>@LabelText</MudText>
            <MudTextField T="string?"></MudTextField>
        </MudStack>
    }
}
@if (FieldType == CustomFieldType.IntegerField)
{
    @if (HasLabel == null)
    {
        <MudNumericField T="int?"></MudNumericField>
    }
    else if ((bool)HasLabel)
    {
        <MudStack>
            <MudText>@LabelText</MudText>
            <MudNumericField T="int?"></MudNumericField>
        </MudStack>
    }
}
@if (FieldType == CustomFieldType.DecimalField)
{
    @if (HasLabel == null)
    {
        <MudNumericField T="decimal?"></MudNumericField>
    }
    else if ((bool)HasLabel)
    {
        <MudStack>
            <MudText>@LabelText</MudText>
            <MudNumericField T="decimal?"></MudNumericField>
        </MudStack>
    }
}
@if (FieldType == CustomFieldType.BooleanField)
{
    @if (HasLabel == null)
    {
        <MudCheckBox Value="false"></MudCheckBox>
    }
    else if ((bool)HasLabel)
    {
        <MudStack>
            <MudText>@LabelText</MudText>
            <MudCheckBox Value="false"></MudCheckBox>
        </MudStack>
    }
}

@if (FieldType == CustomFieldType.SelectedField)
{
    @if (HasLabel == null)
    {
        <MudSelect T="string?">
            <MudSelectItem T="string?" Value="FieldName">
            </MudSelectItem>
        </MudSelect>
    }
    else if ((bool)HasLabel)
    {
        <MudStack>
            <MudText>@LabelText</MudText>
            <MudSelect T="string?">
                <MudSelectItem T="string?" Value="FieldName">
                </MudSelectItem>
            </MudSelect>
        </MudStack>
    }
}

@code {
    [Parameter] public CustomFieldType FieldType { get; set; }
    [Parameter] public string FieldName { get; set; } = string.Empty;
    [Parameter] public bool? HasLabel { get; set; } = false;
    [Parameter] public string? LabelText { get; set; } = string.Empty;

}