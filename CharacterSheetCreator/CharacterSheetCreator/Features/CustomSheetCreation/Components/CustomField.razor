@using CharacterSheetCreator.Shared.Enums

@if (FieldType == CustomFieldType.StringField)
{
        <MudTextField T="string?" Label="@FieldName"></MudTextField>
}
@if (FieldType == CustomFieldType.IntegerField)
{
        <MudNumericField T="int?" Label="@FieldName"></MudNumericField>
}
@if (FieldType == CustomFieldType.DecimalField)
{
        <MudNumericField T="decimal?" Label="@FieldName"></MudNumericField>
}
@if (FieldType == CustomFieldType.BooleanField)
{
        <MudCheckBox Value="false" Label="@FieldName"></MudCheckBox>
}

@if (FieldType == CustomFieldType.SelectedField)
{
        <MudSelect T="string?" Label="@FieldName">
                <MudSelectItem T="string?" Value="FieldName">
                </MudSelectItem>
        </MudSelect>
}

@code {
    [Parameter] public CustomFieldType FieldType { get; set; }
    [Parameter] public string FieldName { get; set; } = string.Empty;

}