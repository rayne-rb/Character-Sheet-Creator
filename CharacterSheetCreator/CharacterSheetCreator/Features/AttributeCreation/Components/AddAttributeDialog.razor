<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">@MudDialog.Title</MudText>
    </TitleContent>
    <DialogContent>
        <MudText>Fart</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="@Cancel">Cancel</MudButton>
        <MudButton Disabled="@(false)" Variant="Variant.Filled" Color="Color.Success" OnClick="@Add">Add</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] public required IMudDialogInstance MudDialog { get; set; }

    public async Task Add()
    {
        MudDialog.Close();
    }
    
    void Cancel()
    {
        MudDialog.Close();
    }

}