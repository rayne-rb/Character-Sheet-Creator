@using Microsoft.JSInterop
@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudIcon Icon="@Icons.Material.Filled.Check"/>
        <MudText Typo="Typo.h6">@MudDialog.Title</MudText>
    </TitleContent>
    <DialogContent>
        <MudText>@Message</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="@(Cancel)">No</MudButton>
        <MudButton Color="Color.Success" Variant="Variant.Filled" OnClick="@(Submit)">Yes</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] public required IMudDialogInstance MudDialog { get; set; }

    [Parameter] public string Message { get; set; } = string.Empty;

    [Inject] public IDialogService DialogService { get; set; } = default!;
    
[Inject] public IJSRuntime JsRuntime { get; set; } = default!;

    void Cancel()
    {
        MudDialog.Cancel();
    }

    void Submit()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }

}
